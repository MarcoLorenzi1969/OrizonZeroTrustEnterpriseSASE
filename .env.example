# ============================================
# ORIZON ZERO TRUST CONNECT - Configuration
# ============================================

# Environment
ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://orizon:orizon_secure_pass_123@localhost:5432/orizon_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://:orizon_redis_pass_123@localhost:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# ============================================
# Qdrant Vector Database
# ============================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=orizon_qdrant_key_123
QDRANT_COLLECTION=orizon_vectors

# ============================================
# JWT Security
# ============================================
SECRET_KEY=your-super-secret-jwt-key-change-in-production-123456789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# OAuth2 Providers (Optional)
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Azure AD OAuth
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# ============================================
# Application Settings
# ============================================
APP_NAME="Orizon Zero Trust Connect"
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=*

# ============================================
# Hub Configuration (Digital Ocean Server)
# ============================================
HUB_HOST=46.101.128.1
HUB_SSH_PORT=22
HUB_HTTPS_PORT=443
HUB_API_PORT=8000

# ============================================
# Tunnel Configuration
# ============================================
# SSH Tunnel Settings
SSH_TUNNEL_KEEPALIVE=30
SSH_TUNNEL_TIMEOUT=300
SSH_TUNNEL_MAX_RETRIES=3
SSH_TUNNEL_RETRY_DELAY=5

# HTTPS Tunnel Settings
HTTPS_TUNNEL_KEEPALIVE=30
HTTPS_TUNNEL_TIMEOUT=300
HTTPS_TUNNEL_MAX_RETRIES=3
HTTPS_TUNNEL_RETRY_DELAY=5

# ============================================
# Agent Configuration
# ============================================
AGENT_VERSION=1.0.0
AGENT_HEARTBEAT_INTERVAL=30
AGENT_REGISTRATION_TOKEN=your-agent-registration-token-here

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@orizon.syneto.eu
SMTP_TLS=true

# ============================================
# Monitoring & Logging
# ============================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Loki
LOKI_URL=http://localhost:3100

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Security Settings
# ============================================
# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# Session Settings
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_CONCURRENT=3

# MFA Settings
MFA_ENABLED=false
MFA_ISSUER=OrizonZeroTrust

# ============================================
# Backup & Retention
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Audit Log Retention
AUDIT_LOG_RETENTION_DAYS=90

# ============================================
# Feature Flags
# ============================================
FEATURE_OAUTH=true
FEATURE_MFA=false
FEATURE_API_VERSIONING=true
FEATURE_WEBSOCKET=true
FEATURE_ADVANCED_ANALYTICS=true

# ============================================
# Development Settings
# ============================================
# Auto-reload for development
AUTO_RELOAD=true

# Show detailed error messages
SHOW_ERROR_DETAILS=true

# SQL Query Logging
LOG_SQL_QUERIES=false
