# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Tunnel Configuration
TUNNEL_SSH_PORT=2222
TUNNEL_HTTPS_PORT=8443
